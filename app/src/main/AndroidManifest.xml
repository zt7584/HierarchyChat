<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="zt.dev.hierarchychat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <activity
            android:name="zt.dev.hierarchychat.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="zt.dev.hierarchychat.GroupChatActivity">
        </activity>
        <activity
            android:name="zt.dev.hierarchychat.GroupChatSettingsActivity">
        </activity>
    </application>

</manifest>
